---
import TowingLayout from '../layouts/TowingLayout.astro';
import TowingHeader from '../components/TowingHeader.astro';
import TowingFooter from '../components/TowingFooter.astro';
---

<TowingLayout
  title="Contact XXCELL Towing - Bergen County NJ"
  description="Contact XXCELL Towing for 24/7 emergency towing and roadside assistance in Bergen County NJ. Call 551-346-5037 for immediate service."
>
  <TowingHeader />
  
  <main>
    <section class="page-hero">
      <div class="container">
        <h1>Contact XXCELL Towing</h1>
        <p class="page-hero-subtitle">Available 24/7 for emergency towing and roadside assistance</p>
      </div>
    </section>

    <section class="contact-info">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-card emergency">
            <h2>Emergency Service</h2>
            <p class="contact-label">Call Now for Immediate Assistance</p>
            <a href="tel:5513465037" class="contact-phone">551-346-5037</a>
            <p class="contact-hours">Available 24/7 - Call Anytime</p>
          </div>

          <div class="contact-card">
            <h3>Service Area</h3>
            <p>All of Bergen County, New Jersey</p>
            <ul class="service-towns">
              <li>Englewood, NJ</li>
              <li>Paramus, NJ</li>
              <li>Hackensack, NJ</li>
              <li>Ridgewood, NJ</li>
              <li>Fort Lee, NJ</li>
              <li>Teaneck, NJ</li>
              <li>Westwood, NJ</li>
              <li>All surrounding areas</li>
            </ul>
          </div>

          <div class="contact-card">
            <h3>Our Services</h3>
            <ul class="services-list">
              <li><a href="/towing">Flatbed Towing</a></li>
              <li><a href="/towing#local-towing">Local Towing (Under 100 Miles)</a></li>
              <li><a href="/towing#emergency">Emergency Towing</a></li>
              <li><a href="/roadside-assistance">Roadside Assistance</a></li>
              <li>Jump Start Service</li>
              <li>Tire Change Service</li>
              <li>Lockout Service</li>
              <li>Fuel Delivery</li>
            </ul>
          </div>

          <div class="contact-card">
            <h3>Business Information</h3>
            <p><strong>Business Name:</strong><br>XXCELL Towing & Transportation</p>
            <p><strong>License Status:</strong><br>Licensed & Insured</p>
            <p><strong>Service Type:</strong><br>Mobile Service (No Physical Location)</p>
            <p><strong>Hours:</strong><br>24/7 - Always Available</p>
          </div>
        </div>
      </div>
    </section>

    <section class="when-to-call">
      <div class="container">
        <h2>When to Call XXCELL Towing</h2>
        <div class="situations-grid">
          <div class="situation">
            <h3>Vehicle Breakdown</h3>
            <p>Engine failure, transmission problems, or any mechanical issue that leaves you stranded</p>
          </div>
          <div class="situation">
            <h3>Accident or Collision</h3>
            <p>Emergency towing service after an accident to transport your vehicle safely</p>
          </div>
          <div class="situation">
            <h3>Dead Battery</h3>
            <p>Jump start service to get your vehicle running again</p>
          </div>
          <div class="situation">
            <h3>Flat Tire</h3>
            <p>Tire change service on the roadside or at your location</p>
          </div>
          <div class="situation">
            <h3>Locked Out</h3>
            <p>Professional lockout service to safely access your vehicle</p>
          </div>
          <div class="situation">
            <h3>Out of Gas</h3>
            <p>Emergency fuel delivery to get you to the nearest gas station</p>
          </div>
          <div class="situation">
            <h3>Vehicle Purchase</h3>
            <p>Scheduled towing for recently purchased vehicles</p>
          </div>
          <div class="situation">
            <h3>Long Distance Towing</h3>
            <p>Local towing service up to 100 miles throughout New Jersey</p>
          </div>
        </div>
      </div>
    </section>

    <section class="what-to-expect">
      <div class="container">
        <h2>What to Expect When You Call</h2>
        <div class="steps-grid">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>Call Our 24/7 Line</h3>
              <p>Dial <a href="tel:5513465037">551-346-5037</a> any time, day or night. Our dispatch team is always ready to help.</p>
            </div>
          </div>
          <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>Provide Your Information</h3>
              <p>Tell us your location, vehicle type, and the nature of your emergency. We'll provide an estimated arrival time.</p>
            </div>
          </div>
          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>We Dispatch Immediately</h3>
              <p>Our nearest available driver will be dispatched to your location right away with the appropriate equipment.</p>
            </div>
          </div>
          <div class="step">
            <div class="step-number">4</div>
            <div class="step-content">
              <h3>Fast Arrival</h3>
              <p>We typically arrive within 30-45 minutes depending on your location and traffic conditions in Bergen County.</p>
            </div>
          </div>
          <div class="step">
            <div class="step-number">5</div>
            <div class="step-content">
              <h3>Professional Service</h3>
              <p>Our experienced driver will assess the situation, provide service, and transport your vehicle safely to your destination.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="faq-section">
      <div class="container">
        <h2>Frequently Asked Questions</h2>
        <div class="faq-grid">
          <div class="faq-item">
            <h3>Do you offer 24/7 service?</h3>
            <p>Yes! XXCELL Towing operates 24 hours a day, 7 days a week, 365 days a year including all holidays.</p>
          </div>
          <div class="faq-item">
            <h3>How quickly can you arrive?</h3>
            <p>We typically arrive within 30-45 minutes throughout Bergen County, depending on your location and traffic conditions.</p>
          </div>
          <div class="faq-item">
            <h3>What areas do you serve?</h3>
            <p>We serve all of Bergen County, NJ including Englewood, Paramus, Hackensack, Ridgewood, Fort Lee, Teaneck, and all surrounding communities. We also provide towing up to 100 miles.</p>
          </div>
          <div class="faq-item">
            <h3>What payment methods do you accept?</h3>
            <p>We accept all major credit cards, debit cards, and cash for your convenience.</p>
          </div>
          <div class="faq-item">
            <h3>Are you licensed and insured?</h3>
            <p>Yes, XXCELL Towing is fully licensed and insured to operate in New Jersey, protecting both you and your vehicle.</p>
          </div>
          <div class="faq-item">
            <h3>Can you tow luxury or sports cars?</h3>
            <p>Absolutely! Our flatbed towing service with professional ramps is ideal for low-clearance vehicles including luxury and sports cars.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="final-cta">
      <div class="container">
        <h2>Ready to Get Help?</h2>
        <p>Call now for immediate 24/7 towing and roadside assistance</p>
        <a href="tel:5513465037" class="btn btn-primary">Call 551-346-5037</a>
      </div>
    </section>
  </main>
  
  <TowingFooter />
</TowingLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-black) 0%, var(--color-gray) 100%);
    color: var(--color-white);
    padding: 4rem 0;
    text-align: center;
  }
  
  .page-hero h1 {
    color: var(--color-yellow);
    margin-bottom: 1rem;
  }
  
  .page-hero-subtitle {
    font-size: 1.25rem;
  }
  
  .contact-info {
    background-color: var(--color-white);
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .contact-card {
    background-color: var(--color-gray-light);
    padding: 2rem;
    border-radius: 8px;
  }
  
  .contact-card.emergency {
    grid-column: 1 / -1;
    background-color: var(--color-black);
    color: var(--color-white);
    text-align: center;
    padding: 3rem 2rem;
  }
  
  .contact-card.emergency h2 {
    color: var(--color-yellow);
    margin-bottom: 1rem;
  }
  
  .contact-label {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }
  
  .contact-phone {
    display: block;
    font-size: 3rem;
    font-weight: 900;
    color: var(--color-yellow);
    text-decoration: none;
    margin-bottom: 1rem;
  }
  
  .contact-phone:hover {
    color: var(--color-yellow-dark);
  }
  
  .contact-hours {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-yellow);
  }
  
  .contact-card h3 {
    color: var(--color-black);
    margin-bottom: 1rem;
  }
  
  .service-towns,
  .services-list {
    list-style: none;
    padding: 0;
  }
  
  .service-towns li,
  .services-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #ddd;
  }
  
  .services-list a {
    color: var(--color-black);
    text-decoration: none;
    font-weight: 600;
  }
  
  .services-list a:hover {
    color: var(--color-yellow-dark);
  }
  
  .when-to-call {
    background-color: var(--color-gray-light);
  }
  
  .when-to-call h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .situations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .situation {
    background-color: var(--color-white);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid var(--color-yellow);
  }
  
  .situation h3 {
    color: var(--color-black);
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }
  
  .what-to-expect {
    background-color: var(--color-white);
  }
  
  .what-to-expect h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .steps-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }
  
  .step {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }
  
  .step-number {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background-color: var(--color-yellow);
    color: var(--color-black);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 900;
  }
  
  .step-content h3 {
    color: var(--color-black);
    margin-bottom: 0.5rem;
  }
  
  .step-content a {
    color: var(--color-black);
    font-weight: 700;
  }
  
  .faq-section {
    background-color: var(--color-gray-light);
  }
  
  .faq-section h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .faq-item {
    background-color: var(--color-white);
    padding: 1.5rem;
    border-radius: 8px;
  }
  
  .faq-item h3 {
    color: var(--color-black);
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }
  
  .final-cta {
    background-color: var(--color-black);
    color: var(--color-white);
    text-align: center;
    padding: 5rem 0;
  }
  
  .final-cta h2 {
    color: var(--color-yellow);
    margin-bottom: 1rem;
  }
  
  .final-cta p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }
  
  @media (max-width: 768px) {
    .page-hero {
      padding: 3rem 0;
    }
    
    .contact-phone {
      font-size: 2rem;
    }
    
    .contact-grid {
      grid-template-columns: 1fr;
    }
    
    .contact-card.emergency {
      grid-column: 1;
    }
    
    .situations-grid,
    .faq-grid {
      grid-template-columns: 1fr;
    }
    
    .step {
      flex-direction: column;
      text-align: center;
    }
    
    .step-number {
      margin: 0 auto;
    }
  }
</style>
