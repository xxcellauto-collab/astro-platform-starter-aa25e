<style>
  .hero {
    background: linear-gradient(135deg, var(--color-black) 0%, var(--color-gray) 100%);
    color: var(--color-white);
    padding: 6rem 0;
    text-align: center;
  }
  
  .hero-content h1 {
    color: var(--color-yellow);
    margin-bottom: 1.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .services-overview {
    background-color: var(--color-white);
  }
  
  .services-overview h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .service-card {
    background-color: var(--color-gray-light);
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }
  
  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .service-card h3 {
    margin-bottom: 1rem;
  }
  
  .service-link {
    display: inline-block;
    margin-top: 1rem;
    color: var(--color-black);
    font-weight: 700;
    text-decoration: none;
  }
  
  .service-link:hover {
    color: var(--color-yellow-dark);
  }
  
  .why-choose {
    background-color: var(--color-gray-light);
  }
  
  .why-choose h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .feature {
    text-align: center;
  }
  
  .feature h3 {
    color: var(--color-black);
    margin-bottom: 0.5rem;
  }
  
  .service-area {
    background-color: var(--color-white);
  }
  
  .service-area h2 {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .service-area-intro {
    text-align: center;
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }
  
  .towns-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    max-width: 900px;
    margin: 0 auto 2rem;
  }
  
  .town {
    background-color: var(--color-black);
    color: var(--color-yellow);
    padding: 1rem;
    text-align: center;
    border-radius: 4px;
    font-weight: 600;
  }
  
  .service-area-note {
    text-align: center;
    font-weight: 700;
    font-size: 1.125rem;
  }
  
  .faq {
    background-color: var(--color-gray-light);
  }
  
  .faq h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .faq-item h3 {
    color: var(--color-black);
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }
  
  .final-cta {
    background-color: var(--color-black);
    color: var(--color-white);
    text-align: center;
    padding: 5rem 0;
  }
  
  .final-cta h2 {
    color: var(--color-yellow);
    margin-bottom: 1rem;
  }
  
  .final-cta p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0;
    }
    
    .hero-cta {
      flex-direction: column;
    }
    
    .services-grid,
    .features-grid,
    .faq-grid {
      grid-template-columns: 1fr;
    }
    
    .towns-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
