---
import '../styles/towing.css';

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-column">
        <h3>XXCELL Towing</h3>
        <p>24/7 professional towing and roadside assistance serving all of Bergen County, New Jersey.</p>
        <p class="footer-license">Licensed & Insured</p>
      </div>
      
      <div class="footer-column">
        <h4>Services</h4>
        <ul>
          <li><a href="/towing">Flatbed Towing</a></li>
          <li><a href="/roadside-assistance">Roadside Assistance</a></li>
          <li><a href="/towing#local-towing">Local Towing</a></li>
          <li><a href="/towing#emergency">Emergency Service</a></li>
        </ul>
      </div>
      
      <div class="footer-column">
        <h4>Service Area</h4>
        <ul>
          <li>Englewood, NJ</li>
          <li>Paramus, NJ</li>
          <li>Hackensack, NJ</li>
          <li>Ridgewood, NJ</li>
          <li>Fort Lee, NJ</li>
          <li>All Bergen County</li>
        </ul>
      </div>
      
      <div class="footer-column">
        <h4>Contact</h4>
        <a href="tel:5513465037" class="footer-phone">551-346-5037</a>
        <p class="footer-hours">Available 24/7</p>
        <p>Bergen County, New Jersey</p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} XXCELL Towing & Transportation. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-black);
    color: var(--color-white);
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer-column h3 {
    color: var(--color-yellow);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }
  
  .footer-column h4 {
    color: var(--color-yellow);
    margin-bottom: 1rem;
    font-size: 1.125rem;
  }
  
  .footer-column p {
    color: var(--color-white);
    line-height: 1.6;
  }
  
  .footer-license {
    font-weight: 700;
    color: var(--color-yellow);
    margin-top: 0.5rem;
  }
  
  .footer-column ul {
    list-style: none;
  }
  
  .footer-column ul li {
    margin-bottom: 0.5rem;
  }
  
  .footer-column ul li a {
    color: var(--color-white);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-column ul li a:hover {
    color: var(--color-yellow);
  }
  
  .footer-phone {
    display: inline-block;
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--color-yellow);
    text-decoration: none;
    margin-bottom: 0.5rem;
  }
  
  .footer-phone:hover {
    color: var(--color-yellow-dark);
  }
  
  .footer-hours {
    font-weight: 700;
    color: var(--color-yellow);
  }
  
  .footer-bottom {
    border-top: 1px solid #333;
    padding-top: 2rem;
    text-align: center;
    color: #999;
  }
  
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .footer-phone {
      font-size: 1.25rem;
    }
  }
</style>
